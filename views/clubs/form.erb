<form class="" action="/clubs/<%= @club.id %>" method="POST">

  <div class="">
    <label>Title</label>
    <input type="text" name="title" placeholder="The title of the club" value="<%= @club.title %>">
  </div>

  <div class="">
    <label>Body</label>
    <textarea name="body" placeholder="The body of the club"><%= @club.body %></textarea>
  </div>

  <div class="">
    <input type="submit" name="" value="Save Post">
  </div>


  <% if(@club.id) %>
  <input type="hidden" name="_method" value="PUT">
  <% end %>

</form>
